{
  "manifest_version": 3,
  "name": "Life Countdown New Tab",
  "version": "1.0.0",
  "description": "A beautiful new tab page with a life countdown timer.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

